{
  "name": "remark-gitlab",
  "version": "1.1.5",
  "description": "remark plugin to autolink references like in GitLab issues, MRs, and comments",
  "license": "MIT",
  "keywords": [
    "unified",
    "remark",
    "remark-plugin",
    "plugin",
    "markdown",
    "gitlab"
  ],
  "repository": "justjavac/remark-gitlab",
  "bugs": "https://github.com/justjavac/remark-gitlab/issues",
  "author": "justjavac <justjavac@gmail.com> (https://justjavac.com)",
  "files": [
    "index.js"
  ],
  "dependencies": {
    "mdast-util-find-and-replace": "^1.0.0",
    "mdast-util-to-string": "^1.0.0",
    "unist-util-visit": "^2.0.0"
  },
  "devDependencies": {
    "browserify": "^17.0.0",
    "nyc": "^15.0.0",
    "prettier": "^2.0.0",
    "remark": "^13.0.0",
    "remark-cli": "^9.0.0",
    "remark-gfm": "^1.0.0",
    "remark-preset-wooorm": "^8.0.0",
    "tape": "^5.0.0",
    "tinyify": "^3.0.0",
    "xo": "^0.37.0"
  },
  "scripts": {
    "format": "remark . -qfo --ignore-pattern test/ && prettier . -w --loglevel warn && xo --fix",
    "build-bundle": "browserify . -s remarkGitHub > remark-gitlab.js",
    "build-mangle": "browserify . -s remarkGitHub -p tinyify > remark-gitlab.min.js",
    "build": "npm run build-bundle && npm run build-mangle",
    "test-api": "node test",
    "test-coverage": "nyc --reporter lcov tape test/index.js",
    "test": "npm run format && npm run build && npm run test-coverage"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true,
    "esnext": false,
    "rules": {
      "complexity": "off",
      "max-params": "off",
      "unicorn/prefer-optional-catch-binding": "off",
      "unicorn/prefer-includes": "off"
    },
    "ignores": [
      "remark-gitlab.js"
    ]
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  }
}
